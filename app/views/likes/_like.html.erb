<div class="like">
  <% if like = current_user.liked(bookmark) %>
    <%= link_to like, class: 'btn btn-danger', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
  <% end %>
  <% else %>
    <%= link_to likes_path(bookmark_id: bookmark.id), class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
    <% end %>
  <% end %>
</div>
